---
{%- assign properties = site.property | sort: "date-modified" | reverse -%}
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
>
  <channel>
    <title>{{ site.title | xml_escape }} Properties</title>
    <description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>		
    <sy:updatePeriod>{{ site.feed_update_period | default: "weekly" | xml_escape }}</sy:updatePeriod>
    <sy:updateFrequency>{{ site.feed_update_frequency | default: 1 | xml_escape }}</sy:updateFrequency>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/{{ page.path }}" rel="self" type="application/rss+xml" />
    {% for prop in properties limit: 12 %}
      {%- if forloop.first -%}
    <lastBuildDate>{{ prop.date-modified | date_to_rfc822 }}</lastBuildDate>
      {%- endif -%}
      {%- if prop.thumbnail -%}
        {%- assign prop_img = prop.thumbnail -%}
      {%- else -%}
        {%- assign prop_img = prop.images.first.url -%}
      {%- endif -%}
      <item>
        <title>{{ prop.title | xml_escape }}</title>
        <dc:creator>ArtInRuins.com</dc:creator>
        <description>
          <![CDATA[
            <p>
              <img src="{{ site.url }}/property-img/r/480/{{ prop_img }}" alt="{{ prop.images.first.alt | xml_escape }}" />
              {% if prop.update %}
              {{ prop.update | xml_escape }}
              {% else %}
              {{ prop.excerpt | xml_escape }}
              {% endif %}
            </p>
          ]]>
        </description>
        <pubDate>{{ prop.date-modified | date_to_rfc822 }}</pubDate>
        <link>{{ site.prod_url }}/property/{{ prop.slug }}</link>
        <guid isPermaLink="true">{{ site.prod_url }}/property/{{ prop.slug }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
